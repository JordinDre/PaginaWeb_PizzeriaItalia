
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Pequeña Italia</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
    <!-- JQUERY -->
    <script src="https://code.jquery.com/jquery-1.10.0.min.js" integrity="sha256-2+LznWeWgL7AJ1ciaIG5rFP7GKemzzl+K75tRyTByOE=" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="">
        <header>
            @if (TempData["Nombre"] is null)
            {
            }
            else
            {
                TempData.Keep();
                if (TempData["Tipo"] != null)
                {
                    TempData.Keep();
                    if (TempData["Tipo"].ToString().Equals("1"))
                    {
                        TempData.Keep();
                        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
                            <div class="container">
                                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">@TempData["Nombre"]</a>
                                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                                        aria-expanded="false" aria-label="Toggle navigation">
                                    <span class="navbar-toggler-icon"></span>
                                </button>
                                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                                    <ul class="navbar-nav flex-grow-1">
                                        <li class="nav-item">
                                            <a class="nav-link text-dark btn btn-outline-light " asp-area="" asp-controller="Home" asp-action="Index">Tienda</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link text-dark btn btn-outline-light " asp-area="" asp-controller="Home" asp-action="RastrearPedido">Pedidos</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link text-dark btn btn-outline-light" asp-area="" asp-controller="Home" asp-action="Cerrar">Cerrar Sesion</a>
                                        </li>
                                        <li class="nav-item">
                                            <!-- Button trigger modal -->
                                            <a class="nav-link text-dark btn btn-outline-light" asp-area="" asp-controller="Home" asp-action="Detalle_pedido">
                                                <div class="row">
                                                    <div class="col">
                                                        <img src="~/img/index/carro.png" class="rounded" alt="">
                                                    </div>
                                                    <div class="col align-content-lg-center">
                                                        <h6 id="Total">Q.0.00</h6>
                                                    </div>
                                                </div>
                                            </a>
                                            <!-- Modal -->
                                            <div class="modal fade" id="Dt_pedido" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                                <div class="modal-dialog modal-lg">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <h5 class="modal-title" id="">Pedido</h5>
                                                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                        </div>
                                                        <script>
                                                            $(function () {
                                                                $('#Total').ready(function () {
                                                                    $.ajax({
                                                                        url: "@Url.Action("Obtener_total","HOME")",
                                                                        type: "POST",
                                                                        success: function (response) {
                                                                            console.log(response);
                                                                            $('#Total').text("Q." + response);
                                                                            $('#Total2').text("Total Q." + response);
                                                                        }
                                                                    });
                                                                })
                                                            })
                                                        </script>
                                                        <div class="modal-body">
                                                            <div>
                                                                <table class="table caption-top table-striped mb-0">
                                                                    <thead class="table-responsive">
                                                                        <tr>
                                                                            <th scope="col">Foto</th>
                                                                            <th scope="col">Nombre</th>
                                                                            <th scope="col">Cantidad</th>
                                                                            <th scope="col">Precio Total</th>
                                                                            <th scope="col">Eliminar</th>
                                                                        </tr>
                                                                    </thead>
                                                                    <tbody id="Tb_Detalle_pedido">
                                                                    </tbody>
                                                                </table>
                                                            </div>
                                                        </div>
                                                        <div class="modal-footer">
                                                            <label id="Total2">Total Q.0.00</label>
                                                            <button type="button" class="btn btn-primary">Pagar</button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </nav>
                    }
                    else
                    {
                        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
                            <div class="container">
                                <a class="navbar-brand" asp-area="" asp-controller="Administrador" asp-action="Admin"></a>
                                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                                        aria-expanded="false" aria-label="Toggle navigation">
                                    <span class="navbar-toggler-icon"></span>
                                </button>
                                <div class="container navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                                    <ul class="navbar-nav flex-grow-1">
                                        <li class="nav-item">
                                            <a class="nav-link text-dark btn btn-outline-light " asp-area="" asp-controller="Administrador" asp-action="pedido">Pedido</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link text-dark btn btn-outline-light " asp-area="" asp-controller="Administrador" asp-action="tienda">Tienda</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link text-dark btn btn-outline-light " asp-area="" asp-controller="Administrador" asp-action="cliente">Cliente</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link text-dark btn btn-outline-light " asp-area="" asp-controller="Administrador" asp-action="bodega">Bodega</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link text-dark btn btn-outline-light " asp-area="" asp-controller="Administrador" asp-action="bodega_ingrediente">Manejo de Bodega</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link text-dark btn btn-outline-light " asp-area="" asp-controller="Administrador" asp-action="ingrediente">Ingredientes</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link text-dark btn btn-outline-light " asp-area="" asp-controller="Administrador" asp-action="pizza">Pizza</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link text-dark btn btn-outline-light " asp-area="" asp-controller="Administrador" asp-action="pizza_ingrediente">Ingredientes de Pizza</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link text-dark btn btn-outline-light" asp-area="" asp-controller="Home" asp-action="Cerrar">Cerrar Sesion</a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </nav>
                    }
                }
            }
        </header>
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        @*<div class="container">
                &copy; 2021 - PaginaWeb_PizzeriaItalia - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>*@
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>