<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Pequeña Italia</title>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
	<div class="">
        <header>
            @if (TempData["Nombre"] is null)
            {
            }
            else
            {
                if (TempData["Tipo"] != null)
                {
                    if (TempData["Tipo"].ToString().Equals("1"))
                    {
                        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 ">
                            <div class="container">
                                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Hola @TempData["Nombre"]</a>
                                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                                        aria-expanded="false" aria-label="Toggle navigation">
                                    <span class="navbar-toggler-icon"></span>
                                </button>
                                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
									<ul class="navbar-nav flex-grow-1">

										<li class="nav-item">
											<a class="nav-link text-dark btn btn-outline-light " asp-area="" asp-controller="Home" asp-action="RastrearPedido">Rastrear Pedido</a>
										</li>
										<li class="nav-item">
											<a class="nav-link text-dark btn btn-outline-light" asp-area="" asp-controller="Home" asp-action="Cerrar">Cerrar Sesion</a>
										</li>
										<li class="nav-item">
											<a class="nav-link text-dark position-absolute top-50 start-50 translate-middle btn btn-outline-light" asp-area="" asp-controller="Home" asp-action="Compra">
												<div class="text-center">
													<img src="~/img/index/carro.png" class="rounded" alt="">
                                                    <label id="Total">Q.0.00</label>
												</div>
											</a>
										</li>
									</ul>
                                </div>
                            </div>
                        </nav>
                    }
                    else
                    {
                        //admin
                    }
                }
            }
        </header>
		<div class="container">
			<main role="main" class="pb-3">
				@RenderBody()
			</main>
		</div>
	</div>

    <footer class="border-top footer text-muted">
        @*<div class="container">
            &copy; 2021 - PaginaWeb_PizzeriaItalia - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>*@
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
